{
  "name": "nodejs-ts_template",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run lint",
    "debug": "npm run build-ts && npm run watch:debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest",
    "serve-debug": "nodemon --inspect -r dotenv/config dist/server.js",
    "serve": "node -r dotenv/config dist/server.js",
    "serve-aws": "node -r dotenv/config -r ./dist/tracing.js dist/server.js",
    "start": "npm run serve",
    "watch-node": "nodemon -r dotenv/config dist/server.js",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "author": "yash",
  "license": "ISC",
  "devDependencies": {
    "@automapper/classes": "^8.7.7",
    "@automapper/core": "^8.7.7",
    "@automapper/types": "^6.3.1",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.15",
    "@types/node-fetch": "^2.6.2",
    "@types/uuid4": "^2.0.0",
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "axios": "^1.3.4",
    "body-parser": "^1.20.1",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "express": "^4.18.2",
    "express-jwt": "^8.3.0",
    "firebase": "^8.6.8",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^3.0.1",
    "moment": "^2.29.4",
    "node-fetch": "^2.6.9",
    "prettier": "^2.8.1",
    "raw-body": "^2.5.2",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "routing-controllers": "^0.10.1",
    "typedi": "^0.10.0",
    "typescript": "^4.9.4",
    "uuid4": "^2.0.3",
    "winston": "^3.8.2"
  }
}